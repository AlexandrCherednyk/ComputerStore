@model ProductTypeViewModel

<div>
    <form method="post" asp-action="AddProductType" asp-controller="ProductType" asp-area="Admin" asp-anti-forgery="true">
        <h2 class="text-center mb-4">Add Product Type</h2>

        <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>

        <div>

            <div class="col-4 mb-4">
                <input type="text" asp-for="Name" id="type-name" class="form-control" Placeholder="Name"/>
                <span asp-validation-for="Name" class="field-validation-error text-danger"/>
            </div>

            <button type="submit" class="btn btn-primary btn-block mb-4">Add</button>

        </div>
    </form>
</div>

@section  Scripts{
    @await Html.PartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml")
}
