@model Product

<div>
    <form method="post" asp-action="Details" asp-controller="Product" asp-area="Admin" enctype="multipart/form-data" asp-anti-forgery="true">
        <h2 class="text-center mb-4">Update Product</h2>

        <div class="validation" asp-validation-summary="ModelOnly"></div>

        <div class="col-8 mx-auto">
            <div class="row">
                <div class="col-6 form-group">
                    <input class="form-control" name="ID" type="text" value="@Model.ID" hidden="">
                    <input class="form-control" name="PathToFile" type="text" value="@Model.PathToFile" hidden="">
                    <input class="form-control" asp-for="Type.Name" type="text" value="@Model.Type.Name" hidden="">
                    <input class="form-control" asp-for="Manufacturer.Name" type="text" value="@Model.Manufacturer.Name" hidden="">

                    <div class="mb-3 ">
                        <input type="text" asp-for="Name" id="product-name" class="form-control" placeholder="Name" />
                        <span asp-validation-for="Name" class="field-validation-error text-danger" />
                    </div>

                    <div class="mb-3">
                        <textarea class="form-control" asp-for="Description" rows="10" data-val="true" id="Description" maxlength="255" name="Description" placeholder="Description"></textarea>
                        <span asp-validation-for="Description" class="field-validation-error text-danger" />
                    </div>
                </div>

                <div class="col-6 form-group">
                    <div class="mb-3">
                        @Html.DropDownListFor(m => m.Type.ID, new SelectList(ViewBag.Types, "ID", "Name"), "Choose type", new { @class = "form-select"})
                        <span asp-validation-for="Type.ID" class="field-validation-error text-danger" />
                    </div>

                    <div class="mb-3">
                        @Html.DropDownListFor(m => m.Manufacturer.ID, new SelectList(ViewBag.Manufacturers, "ID", "Name"), "Choose manufacturer", new { @class = "form-select"})
                        <span asp-validation-for="Manufacturer.ID" class="field-validation-error text-danger" />
                    </div>

                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="text" asp-for="Price" id="product-name" class="form-control" placeholder="0" />
                        </div>
                        <span asp-validation-for="Price" class="field-validation-error text-danger" />
                    </div>

                    <div class="mb-3">
                        <input type="text" asp-for="Count" id="product-name" class="form-control" placeholder="Count" />
                        <span asp-validation-for="Count" class="field-validation-error text-danger" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6 mx-auto card">
                    <div class="card-img-wrapper mb-4">
                        <img class="card-img-top" src="@Model.PathToFile" alt="Product img." />
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <label for="formFile" class="form-label mt-4">Choose some image:</label>
                <input class="form-control" name="image" type="file" id="formFile">
            </div>

            <button type="submit" class="btn btn-primary btn-block mb-4">Update</button>

        </div>
    </form>
</div>
