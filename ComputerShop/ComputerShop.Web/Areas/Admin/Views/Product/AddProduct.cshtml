@model Product

<div>
    <form method="post" asp-action="AddProduct" asp-controller="Product" asp-area="Admin" asp-anti-forgery="true">
        <h2 class="text-center mb-4">Add Product</h2>

        <div class="validation" asp-validation-summary="ModelOnly"></div>

        <div>

            <div class="col-4 mb-4">
                <input type="text" asp-for="Name" id="product-name" class="form-control" />
                <label asp-for="Name" class="form-label" id="product-name-label">Name</label>
                <span asp-validation-for="Name" />
            </div>

            <div class="col-4 mb-4">
                <textarea type="text" asp-for="Description" id="product-description" class="form-control" />
                <label asp-for="Description" class="form-label" id="product-description-label">Description</label>
                <span asp-validation-for="Description" />
            </div>

            <button type="submit" class="btn btn-primary btn-block mb-4">Add</button>

        </div>
    </form>
</div>

